<div class='task-new-main'>
  
  <div class='task-new-form'>
    <%=form_with(model: @task, url: project_tasks_path, local: true, class: 'task-form') do |f|%>

      <%= render 'shared/error_messages', resource: @task %>

      <h1>新規タスク</h1>
      <div class='task-form-fields'>
        <div class='task-form-field'>
          <%= f.label :title, :タスク名, class: 'task-form-label'%>
          <%= f.text_field :title, class: 'task-form-input', placeholder: 'タスク名を入力してください'%>
        </div>
        <div class='task-form-field'>
          <%= f.label :item, :内容, class: 'task-form-label'%>
          <%= f.text_field :item, class: 'task-form-input', placeholder: 'タスクの内容を入力してください'%>
        </div>
        <div class='task-form-date'>
          <%= f.label :deadline, :期限, class: 'task-form-label'%><br>
          <%= raw sprintf(
                  f.date_select(
                    :deadline,
                    class:'select-deadline',
                    id:"deadline-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: (Time.now.year),
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
        <div class='task-form-submit-btn'>
          <%= f.submit class: 'task-new-form-btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>